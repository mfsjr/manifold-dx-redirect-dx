{
  "compilerOptions": {
    "baseUrl": "./dist/src",
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
